<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.TicketForm"
    android:id="@+id/formTicket">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContainer"
        android:background="@color/mainBackgroundColor"
        android:backgroundTintMode="src_over">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.35">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="@mipmap/logo"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginTop="20dp">

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.35">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/novologo"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="50dp"
                android:id="@+id/logoLayout"
                android:alpha="0.5">

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:id="@+id/formContainer"
        android:background="@drawable/layout_border_rounded"
        android:layout_margin="10dp"
        android:alpha="0.95">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            android:background="@drawable/layout_border_rectangular">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelLocation"
                android:textColor="@color/mainFontColor"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:text="@string/locationLabel"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text|textPersonName"
                android:ems="10"
                android:id="@+id/textLocation"
                android:background="@android:color/white"
                android:alpha="0.85"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            android:background="@drawable/layout_border_rectangular">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelDate"
                android:textColor="@color/mainFontColor"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:text="@string/dateLabel"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType=""
                android:ems="10"
                android:id="@+id/textDate"
                android:background="@android:color/white"
                android:layout_marginTop="5dp"
                android:alpha="0.85" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:layout_margin="10dp"
            android:background="@drawable/layout_border_rectangular">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelDescription"
                android:textSize="14sp"
                android:textColor="@color/mainFontColor"
                android:background="@color/colorPrimary"
                android:text="@string/descriptionLabel"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/textDescription"
                android:layout_weight="0.25"
                android:background="@android:color/white"
                android:layout_marginTop="10dp"
                android:alpha="0.85"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.5"
                android:layout_weight="0.75"
                android:id="@+id/btnGroup">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:id="@+id/btnContainer">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:id="@+id/btn1Wrapper">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnCamera"
                                android:background="@drawable/camera_button"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:baselineAlignBottom="false"
                                android:contentDescription="" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:id="@+id/btn2Wrapper">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnSend"
                                android:background="@drawable/send_button"
                                android:layout_gravity="center_vertical|center_horizontal" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
